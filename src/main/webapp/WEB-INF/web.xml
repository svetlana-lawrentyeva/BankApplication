<web-app>
    <servlet>
        <servlet-name>WelcomeServlet</servlet-name>
        <servlet-class>com.luxoft.bankapp.web.servlets.WelcomeServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>WelcomeServlet</servlet-name>
        <url-pattern>/welcome</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.luxoft.bankapp.web.servlets.LoginServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>SessionsAmountServlet</servlet-name>
        <servlet-class>com.luxoft.bankapp.web.servlets.SessionsAmountServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>SessionsAmountServlet</servlet-name>
        <url-pattern>/sessions</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>BalanceServlet</servlet-name>
        <servlet-class>com.luxoft.bankapp.web.servlets.BalanceServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>BalanceServlet</servlet-name>
        <url-pattern>/balance</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>FindClientServlet</servlet-name>
        <servlet-class>com.luxoft.bankapp.web.servlets.FindClientServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>FindClientServlet</servlet-name>
        <url-pattern>/clients</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>GetClientServlet</servlet-name>
        <servlet-class>com.luxoft.bankapp.web.servlets.GetClientServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>GetClientServlet</servlet-name>
        <url-pattern>/client</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>WithdrawServlet</servlet-name>
        <servlet-class>com.luxoft.bankapp.web.servlets.WithdrawServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>WithdrawServlet</servlet-name>
        <url-pattern>/withdraw</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>com.luxoft.bankapp.web.servlets.LogoutServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>SaveClientServlet</servlet-name>
        <servlet-class>com.luxoft.bankapp.web.servlets.SaveClientServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>SaveClientServlet</servlet-name>
        <url-pattern>/saveClient</url-pattern>
    </servlet-mapping>

    <welcome-file-list>
        <welcome-file>welcome</welcome-file>
    </welcome-file-list>

    <filter>
        <filter-name>CheckLoggedFilter</filter-name>
        <filter-class>com.luxoft.bankapp.web.filters.CheckLoggedFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>CheckLoggedFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <listener>
        <listener-class>com.luxoft.bankapp.web.listeners.SessionListener</listener-class>
        <description>count number connections</description>
    </listener>

    <error-page>
        <error-code>500</error-code>
        <location>/errorPages/500.jsp</location>
    </error-page>

    <error-page>
        <error-code>404</error-code>
        <location>/errorPages/404.jsp</location>
    </error-page>
</web-app>